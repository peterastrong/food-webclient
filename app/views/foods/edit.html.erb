<%= form_tag "/foods/#{@food.id}", method: :patch do %>
  <p>First Ingredient: <input type="text" name="ingredient1" value="<%= @food.first_ingredient %>"> </p>
  <p>Second Ingredient: <input type="text" name="ingredient2" value="<%= @food.second_ingredient %>"> </p>
  <p>First spice: <input type="text" name="spice1" value="<%= @food.first_spice %>"> </p>
  <p>Second spice: <input type="text" name="spice2" value="<%= @food.second_spice %>"> </p>

  <input type="submit" value="update this food.">
<% end %>